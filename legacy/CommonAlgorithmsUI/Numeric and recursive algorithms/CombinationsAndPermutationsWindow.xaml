<Window x:Class="CommonAlgorithmsUI.CombinationsAndPermutationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonAlgorithmsUI"
        mc:Ignorable="d"
        Title="CombinationsAndPermutationsWindow" Width="600" Height="400">
    <StackPanel>
        <WrapPanel>
            <TextBlock Margin="5">Generate N =</TextBlock>
            <TextBox Name="NtxtBox" Width="30" Height="25">2</TextBox>
            <Button Name="genNCombinationsBtn" Margin="5" Click="genNCombinationsBtn_Click">combinations</Button>
            <Button Name="genNPermutationsBtn" Margin="5" Click="genNPermutationsBtn_Click">permutations</Button>
            <CheckBox Name="duplicatesAllowedCheckBox" Margin="5" IsChecked="True">Duplications allowed</CheckBox>
        </WrapPanel>
        <TextBlock Margin="5">Initial set</TextBlock>
        <TextBox Name="setTxtBox">1,2,3</TextBox>
        <TextBlock Name="resultTextArea" Margin="5">Result</TextBlock>
        <TextBox Name="resultTxtBox" Margin="0,5,0,0" Height="250" Background="Azure" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" TextWrapping="Wrap"></TextBox>
    </StackPanel>
</Window>
