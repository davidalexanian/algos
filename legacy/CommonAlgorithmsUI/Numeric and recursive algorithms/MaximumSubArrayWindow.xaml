<Window x:Class="CommonAlgorithmsUI.MaximumSubArrayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonAlgorithmsUI"
        mc:Ignorable="d"
        Title="MaximumSubArrayWindow" Height="300" Width="300">
    <StackPanel>
        <TextBlock>Input (integers only)</TextBlock>
        <TextBox Name="Input" Margin="0,0,0,5">5,-4,-2,-3,5,6,-4,-2</TextBox>
        <WrapPanel Margin="5,0,0,0">
            <Button Name="solveBruteForceBtn" Click="solveBruteForceBtn_Click">Brute force solution</Button>
            <Button Name="solveFasterBtn" Click="solveFasterBtn_Click" Margin="5,0,0,0">Solve O(n*logn)</Button>
        </WrapPanel>
        <TextBlock Margin="0,5,0,0">Result</TextBlock>
        <TextBox Name="resultTxtBox" ></TextBox>
        <TextBlock Name="resultTxtBlock" Margin="0,5,0,5"></TextBlock>
    </StackPanel>
</Window>
