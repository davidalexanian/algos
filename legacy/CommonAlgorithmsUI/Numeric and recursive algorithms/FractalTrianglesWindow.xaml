<Window x:Class="CommonAlgorithmsUI.FractalTrianglesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonAlgorithmsUI"
        mc:Ignorable="d"
        Title="FractalTrianglesWindow" Height="650" Width="600" ResizeMode="NoResize">
    <StackPanel>
        <WrapPanel>
            <TextBlock>Depth of recursion, a number between 0 to 10 (3^n triangles will be generated)</TextBlock>
            <TextBox Name="depthTxtBox" Margin="5,0,0,0" Width="30">5</TextBox>
            <Button Name="genBtn" Margin="5,0,0,0" Click="genBtn_Click">Generate</Button>
        </WrapPanel>
        <Canvas Name="canvas" Width="600" Height="600"/>
    </StackPanel>
</Window>
