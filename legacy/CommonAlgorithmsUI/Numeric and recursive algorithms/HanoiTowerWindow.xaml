<Window x:Class="CommonAlgorithmsUI.HanoiTowerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonAlgorithmsUI"
        mc:Ignorable="d"
        Title="HanoiTowerWindow" Height="280" Width="550" ResizeMode="NoResize">
    <StackPanel>
        <WrapPanel Margin="17,5,0,0">
            <TextBlock>Number of disks (1 to 10)</TextBlock>
            <TextBox Name="diskNumbersTxt" Margin="5,0,5,0" Width="30"></TextBox>
            <TextBlock>Speed (1 to 5) or left blank</TextBlock>
            <TextBox Name="speedTxt" Margin="5,0,0,0" Width="20">1</TextBox>
            <Button Name="start" Margin="10,0,0,0" Padding="5,0,5,0" Click="start_Click">start</Button>
        </WrapPanel>
        <Canvas Name="canvas" Margin="10" Width="500" Height="200" Background="LightGray"/>
    </StackPanel>
</Window>
